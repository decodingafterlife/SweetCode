{
  "manifest_version": 3,
  "name": "SweetCode",
  "version": "1.0",
  "description": "Gamify LeetCode practice by earning social media time",
  "permissions": [
    "webRequest",
    "storage",
    "webNavigation",
    "scripting",
    "tabs",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.youtube.com/*",
    "https://www.instagram.com/*",
    "https://www.facebook.com/*",
    "https://www.twitter.com/*",
    "https://www.x.com/*",
    "https://api.groq.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches":  [
      "https://leetcode.com/*",
      "https://www.leetcode.com/*"
    ],
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ]
}